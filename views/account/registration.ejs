<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <% }) %>
  </ul>
<% } %>

<form action="/account/register" method="post">
  <fieldset>
    <legend>Account Registration</legend>
    
    <label for="account_firstname">First Name:</label>
    <input name="account_firstname" id="account_firstname" type="text" value="<%= locals.account_firstname || '' %>" required>
    
    <label for="account_lastname">Last Name:</label>
    <input name="account_lastname" id="account_lastname" type="text" value="<%= locals.account_lastname || '' %>" required>
    
    <label for="account_email">Email Address:</label>
    <input name="account_email" id="account_email" type="email" value="<%= locals.account_email || '' %>" required>
    
    <label for="account_password">Password:</label>
    <input name="account_password" id="account_password" type="password" required>
    <p class="password-note">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
    
    <input type="submit" value="Register">
    
    <p>Have an account? <a href="/account/login">Sign-in</a></p>
  </fieldset>
</form>

<%- include('../partials/footer') %>
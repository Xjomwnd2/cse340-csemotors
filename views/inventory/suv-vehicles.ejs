    <script>
        let currentVehicle = '';
        let currentPrice = '';
        let currentDescription = '';

        function openPurchaseModal(vehicle, price, description) {
            currentVehicle = vehicle;
            currentPrice = price;
            currentDescription = description;
            document.getElementById('purchaseDetails').innerHTML = 
                `<strong>${vehicle}</strong><br>
                 ${description}<br><br>
                 Price: <strong>${price}</strong><br><br>
                 Ready for your next adventure?`;
            document.getElementById('purchaseModal').style.display = 'block';
        }

        function closePurchaseModal() {
            document.getElementById('purchaseModal').style.display = 'none';
        }

        function confirmPurchase() {
            closePurchaseModal();
            
            const successMsg = document.getElementById('successMessage');
            successMsg.innerHTML = `üöô Successfully purchased ${currentVehicle} for ${currentPrice}!`;
            successMsg.style.display = 'block';
            
            setTimeout(() => {
                successMsg.style.display = 'none';
            }, 4000);
            
            console.log('SUV Purchase confirmed:', {
                vehicle: currentVehicle,
                price: currentPrice,
                description: currentDescription,
                category: 'suv',
                timestamp: new Date().toISOString()
            });
        }

        window.onclick = function(event) {
            const modal = document.getElementById('purchaseModal');
            if (event.target == modal) {
                closePurchaseModal();
            }
        }
    </script>

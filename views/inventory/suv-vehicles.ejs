        }

        .vehicle-title {
            font-size: 1.6rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #2d5016;
        }

        .vehicle-specs {
            color: #7f8c8d;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .vehicle-price {

<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <% }) %>
  </ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>

<form action="/inv/delete" method="post">
  <fieldset>
    <legend>Confirm Vehicle Deletion</legend>
    
    <label for="inv_make">Make:</label>
    <input name="inv_make" id="inv_make" type="text" value="<%= locals.inv_make %>" readonly>
    
    <label for="inv_model">Model:</label>
    <input name="inv_model" id="inv_model" type="text" value="<%= locals.inv_model %>" readonly>
    
    <label for="inv_year">Year:</label>
    <input name="inv_year" id="inv_year" type="text" value="<%= locals.inv_year %>" readonly>
    
    <label for="inv_price">Price:</label>
    <input name="inv_price" id="inv_price" type="text" value="<%= locals.inv_price %>" readonly>
    
    <!-- Hidden field to pass inv_id -->
    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
    
    <input type="submit" name="submit" id="deleteBtn" value="Delete">
    <a href="/inv/" id="cancelLink">Cancel</a>
  </fieldset>
</form>

<%- include('../partials/footer') %>